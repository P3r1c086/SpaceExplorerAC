<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

        <import type="es.architectcoders.domain.Photo"/>
        <import type="es.architectcoders.domain.Apod"/>

        <variable
            name="item"
            type="java.lang.Object" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvFavorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:clickable="true"
        app:cardCornerRadius="16dp"
        style="?attr/materialCardViewElevatedStyle"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivFavoritePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    app:url="@{item instanceof Photo ? ((Photo)item).imgSrc : ((Apod)item).hdurl}"
                    tools:src="@drawable/ic_nasa_logo"
                    android:contentDescription="@null"/>

                <ImageButton
                    android:id="@+id/ibExpand"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_expand_more"
                    android:background="@android:color/transparent"
                    android:layout_gravity="bottom|end"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="@null"/>

            </FrameLayout>

            <LinearLayout
                android:id="@+id/llData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvData1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:text="@{item instanceof Photo ? @string/sol(((Photo)item).sol) : @string/title_apod(((Apod)item).title)}"
                    android:fontFamily="@font/rubik_regular"
                    tools:text="Camara navigation"/>

                <TextView
                    android:id="@+id/tvData2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="@{item instanceof Photo ? @string/earth_date(((Photo)item).earthDate) : @string/explanation_apod(((Apod)item).explanation)}"
                    android:fontFamily="@font/rubik_regular"
                    tools:text="Earth date: 2022-01-01"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>